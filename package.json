{
  "name": "nuxt-template",
  "version": "1.0.0",
  "description": "My grand Nuxt.js project",
  "author": "PMLS3",
  "private": true,
  "scripts": {
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lintfix": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "build": "nuxt build",
    "clean:public": "rimraf \"public/**/*.*!(md)\" && rimraf \"public/_nuxt\"",
    "clean:functions": "rimraf \"functions/node_modules\" && rimraf \"functions/.nuxt\"",
    "clean:static": "rimraf \"static/sw.js\"",
    "clean": "npm run clean:public && npm run clean:functions && npm run clean:static",
    "copy:nuxt": "mkdir public/_nuxt && cp -r functions/.nuxt/dist/* public/_nuxt",
    "copy:static": "cp -r static/* public",
    "copy": "npm run copy:nuxt && npm run copy:static",
    "build:firebase": "npm run clean && npm run build && npm run copy && cd functions && npm i",
    "start:firebase": "firebase serve --only functions,hosting",
    "deploy": "firebase deploy --only functions,hosting",
    "deploy:hosting": "firebase deploy --only hosting"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.10.3",
    "@nuxtjs/firebase": "^5.2.0",
    "@nuxtjs/pwa": "^3.0.0-0",
    "core-js": "^2.6.5",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "fabric": "^4.1.0",
    "firebase": "^7.14.4",
    "firebase-admin": "^8.12.1",
    "material-icons": "^0.3.1",
    "moment": "^2.26.0",
    "nuxt": "^2.0.0",
    "nuxt-purgecss": "^0.2.1",
    "nuxt-sass-resources-loader": "^2.0.5",
    "postcss-rtl": "^1.7.3",
    "prismjs": "^1.20.0",
    "verte": "0.0.12",
    "vue-backtotop": "^1.6.1",
    "vue-feather-icons": "^5.0.0",
    "vue-long-click": "0.0.4",
    "vue-perfect-scrollbar": "^0.2.1",
    "vue-prism-component": "^1.2.0",
    "vue-select": "^3.10.3",
    "vue-svg-gauge": "^1.2.1",
    "vue-tel-input": "^4.4.0",
    "vue2-google-maps": "^0.10.7",
    "vue2-perfect-scrollbar": "^1.5.0",
    "vuedraggable": "^2.23.2",
    "vuesax": "^3.11.15"
  },
  "devDependencies": {
    "@nuxtjs/tailwindcss": "^1.4.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.3",
    "node-sass": "^4.14.1",
    "nodemon": "^1.18.9",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2"
  }
}
